# E-Archiving System Environment Configuration
# نظام الأرشفة الإلكتروني - إعدادات البيئة

# API Configuration - إعدادات الـ API
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# Database Configuration - إعدادات قاعدة البيانات
DATABASE_URL=postgresql://postgres:password@localhost:5432/e_archiving_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=e_archiving_db
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration - إعدادات المصادقة
# Backend Server Configuration
BACKEND_PORT=3001
BACKEND_NODE_ENV=development

JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h
VITE_JWT_STORAGE_KEY=e_archiving_token

# File Upload Configuration - إعدادات رفع الملفات
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png,.txt
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Application Configuration - إعدادات التطبيق
VITE_APP_NAME=نظام الأرشفة الإلكتروني
VITE_APP_VERSION=1.0.0
PORT=3001

# Development Configuration - إعدادات التطوير
NODE_ENV=development
VITE_DEV_MODE=true
VITE_ENABLE_LOGGING=true

# Security Configuration - إعدادات الأمان
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here
CORS_ORIGIN=http://localhost:5173

# UI Configuration - إعدادات الواجهة
VITE_ITEMS_PER_PAGE=10
VITE_SEARCH_DEBOUNCE_MS=300

# Development Configuration
VITE_ENABLE_MOCK_DATA=false

# Email Configuration (Optional) - إعدادات البريد الإلكتروني
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@e-archiving.local